package org.eclipse.tracecompass.totalads.exceptions;

import org.apache.log4j.Logger;


class TotalADSUncaughtExceptionHandler implements Thread.UncaughtExceptionHandler {

    private static Logger log = Logger.getLogger(TotalADSUncaughtExceptionHandler.class);

    @Override
    public void uncaughtException(Thread t, Throwable ex) {
      log.error("Uncaught exception: " + t.getName(), ex); //$NON-NLS-1$
    }

  }
